{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScanLink",
  "version": "0.1.0",
  "identifier": "com.scanlink.desktop",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "ScanLink",
        "width": 1024,
        "height": 850,
        "minWidth": 800,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false,
        "closable": true,
        "minimizable": true,
        "maximizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "postInstallScript": "scripts/postinst.sh",
        "postRemoveScript": "scripts/postrm.sh"
      },
      "rpm": {
        "postInstallScript": "scripts/postinst.sh",
        "postRemoveScript": "scripts/postrm.sh"
      }
    },
    "windows": {
      "nsis": {
        "installerHooks": "scripts/nsis-hooks.nsh"
      }
    }
  }
}
